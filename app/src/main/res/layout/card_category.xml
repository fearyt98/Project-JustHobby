<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/subcategoryBottomSheet"
              android:layout_width="96dp"
              android:layout_height="96dp"
              android:layout_marginStart="3dp"
              android:layout_marginEnd="-9dp"
              android:background="@drawable/card_search_bg"
              android:orientation="vertical">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="vertical"
                  tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView android:id="@+id/cardCategoryImage"
                   android:layout_width="wrap_content"
                   android:layout_height="39dp"
                   android:layout_gravity="center"
                   android:background="@android:color/transparent"
                   android:paddingTop="15dp"
                   android:tint="@color/sports"
                   app:srcCompat="@drawable/category_ic_sports"
                   tools:ignore="ContentDescription"/>

        <TextView android:id="@+id/cardCategoryTitle"
                  style="@style/Caption3.Bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:paddingStart="5dp"
                  android:paddingTop="15dp"
                  android:paddingEnd="5dp"
                  android:singleLine="true"
                  android:textColor="@color/sports"/>
    </LinearLayout>
</LinearLayout>