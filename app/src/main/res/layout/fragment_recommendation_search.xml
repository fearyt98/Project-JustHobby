<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:background="@color/colorPrimary">
        <EditText android:id="@+id/recommendationSearchField"
                  style="@style/EditTextSearch"
                  android:paddingStart="64dp"
                  android:paddingEnd="64dp"
                  android:inputType="text"
                  android:textColorHint="@color/grayDark"
                  android:hint="@string/search"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="9dp"
                     android:paddingTop="10dp"
                     android:paddingBottom="10dp"
                     android:paddingStart="28dp"
                     android:paddingEnd="0dp"
                     android:tint="@color/grayDark"
                     android:background="@android:color/transparent"
                     app:srcCompat="@drawable/ic_arrow_back_24dp"
                     app:layout_constraintTop_toTopOf="@id/recommendationSearchField"
                     app:layout_constraintLeft_toLeftOf="@id/recommendationSearchField"
                     app:layout_constraintBottom_toBottomOf="@id/recommendationSearchField"/>
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="9dp"
                     android:paddingTop="10dp"
                     android:paddingBottom="10dp"
                     android:paddingStart="0dp"
                     android:paddingEnd="32dp"
                     android:tint="@color/grayDark"
                     android:background="@android:color/transparent"
                     android:contentDescription="@string/search"
                     app:srcCompat="@drawable/ic_filter_list_24dp"
                     app:layout_constraintTop_toTopOf="@id/recommendationSearchField"
                     app:layout_constraintRight_toRightOf="@id/recommendationSearchField"
                     app:layout_constraintBottom_toBottomOf="@id/recommendationSearchField"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/recommendationSearchCategories"
                                            tools:listitem="@layout/fragment_card_search_category"
                                            tools:itemCount="1"/>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/recommendedSearchContainer"
                 android:paddingBottom="64dp"/>
</LinearLayout>