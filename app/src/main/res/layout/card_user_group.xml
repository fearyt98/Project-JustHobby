<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:id="@+id/cardUserGroup"
              android:layout_marginBottom="-6dp"
              android:background="@drawable/card_course_bg"
              android:layout_marginLeft="3dp"
              android:layout_marginRight="3dp"
              android:orientation="horizontal"
              android:baselineAligned="false">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/cardUserGroupDays"
                  android:paddingStart="10dp"
                  android:paddingEnd="2dp"
                  android:minWidth="60dp"
                  android:gravity="center"
                  android:background="@drawable/card_group_day_bg"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay1"
                      android:orientation="vertical"
                      android:visibility="visible"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay1Str"
                      android:text="@string/short_monday"
                      android:textColor="@color/whiteTop"
                      android:background="@drawable/card_group_day_str_bg"
                      android:paddingStart="4dp"
                      android:paddingEnd="4dp"
                      android:paddingTop="0dp"
                      android:paddingBottom="0dp"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay1StartTime"
                      android:textColor="@color/whiteTop"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay1EndTime"
                      android:textColor="@color/whiteTop"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay2"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/card_group_day_style_default"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay2Str"
                      android:text="@string/short_tuesday"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay2StartTime"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay2EndTime"
                      android:text="20:30"
                      tools:ignore="HardcodedText"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay3"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/card_group_day_style_default"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay3Str"
                      android:text="@string/short_wednesday"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay3StartTime"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay3EndTime"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay4"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/card_group_day_style_default"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay4Str"
                      android:text="@string/short_thursday"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay4StartTime"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay4EndTime"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay5"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/card_group_day_style_default"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay5Str"
                      android:text="@string/short_friday"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay5StartTime"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay5EndTime"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay6"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/card_group_day_style_default"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay6Str"
                      android:text="@string/short_saturday"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay6StartTime"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay6EndTime"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
        <LinearLayout android:layout_width="42dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupDay7"
                      android:orientation="vertical"
                      android:visibility="gone"
                      android:background="@drawable/card_group_day_style_default"
                      android:paddingTop="3dp"
                      android:paddingBottom="3dp"
                      android:layout_marginEnd="8dp">
            <TextView android:id="@+id/cardUserGroupDay7Str"
                      android:text="@string/short_sunday"
                      style="@style/dayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay7StartTime"
                      style="@style/timeDayWeekDefault"/>
            <TextView android:id="@+id/cardUserGroupDay7EndTime"
                      style="@style/timeDayWeekDefault"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/cardUserGroupCenter"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:paddingBottom="8dp"
                  android:orientation="vertical"
                  android:paddingStart="8dp"
                  android:paddingEnd="8dp">
        <TextView style="@style/Body2.Medium"
                  android:textColor="@color/grafitText"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:layout_width="wrap_content"
                  android:id="@+id/cardUserGroupTitle"/>
        <TextView style="@style/Caption2"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:textColor="@color/grayDarkMiddle"
                  android:layout_width="wrap_content"
                  android:id="@+id/cardUserGroupCompany"
                  android:layout_marginTop="-6dp"
                  android:paddingBottom="5dp"/>
        <TextView style="@style/Caption2"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:textColor="@color/greenText"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="-3dp"
                  android:layout_marginBottom="3dp"
                  android:id="@+id/cardUserGroupAddress"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView style="@style/Caption2"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="@color/gray"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/teacher"/>
            <TextView style="@style/Caption1"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="@color/gray"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/cardUserGroupTeacher"
                      android:paddingStart="5dp"
                      tools:ignore="RtlSymmetry"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/userGroupsDeleteBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_user_group_delete_btn_bg"
            android:padding="5dp"
            android:text="@string/remove_from_my_courses_btn"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/Body2.Medium.UpperCase"/>
</LinearLayout>