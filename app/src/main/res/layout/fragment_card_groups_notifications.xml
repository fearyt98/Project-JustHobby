<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:id="@+id/cardUserCourse"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:layout_marginBottom="-6dp">
    <View android:id="@+id/cardUserCoursePaddingTop"
          android:layout_width="match_parent"
          android:layout_height="0dp"/>
    <LinearLayout android:background="@drawable/card_course_bg"
                  android:orientation="horizontal"
                  tools:ignore="UselessParent"
                  android:baselineAligned="false">
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:paddingBottom="8dp"
                      android:orientation="vertical"
                      android:paddingStart="8dp"
                      android:paddingEnd="8dp">
            <TextView style="@style/Body2.Medium"
                      android:textColor="@color/grafitText"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:layout_width="wrap_content"
                      android:id="@+id/cardUserCourseTitle"
                      android:text="Восточные танцы (Начинающие)"
                      tools:ignore="HardcodedText"/>
            <TextView style="@style/Caption2"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="@color/grayDarkMiddle"
                      android:layout_width="wrap_content"
                      android:id="@+id/cardUserCourseCompany"
                      android:layout_marginTop="-6dp"
                      android:paddingBottom="5dp"
                      android:text="Drive - Школа танцев в Томске"
                      tools:ignore="HardcodedText"/>
            <TextView style="@style/Caption2"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="@color/greenText"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="-3dp"
                      android:layout_marginBottom="3dp"
                      android:id="@+id/cardUserCourseAddress"
                      android:text="пр. Ленина, 147"
                      tools:ignore="HardcodedText"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView style="@style/Caption2"
                          android:maxLines="1"
                          android:ellipsize="end"
                          android:singleLine="true"
                          android:textColor="@color/gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Педагог: "
                          tools:ignore="HardcodedText"/>
                <TextView style="@style/Caption1"
                          android:maxLines="1"
                          android:ellipsize="end"
                          android:singleLine="true"
                          android:textColor="@color/gray"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/cardUserCourseTeacher"
                          android:paddingStart="5dp"
                          android:text="Ирина Валекжанина"
                          tools:ignore="HardcodedText,RtlSymmetry"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:id="@+id/cardUserCourseDays"
                      android:minWidth="80dp"
                      android:gravity="center"
                      android:background="@drawable/card_groups_notifications_bg"
                      android:orientation="horizontal">
            <android.support.v7.widget.SwitchCompat android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:id="@+id/changeTypeMute"/>
        </LinearLayout>
    </LinearLayout>
</TableLayout>