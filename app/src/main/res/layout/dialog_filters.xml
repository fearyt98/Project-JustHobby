<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/dialogFilters"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:layout_marginTop="7.5dp"
                                                         android:layout_marginBottom="7.5dp">

                <TextView style="@style/Body2.Medium"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingStart="15dp"
                          android:paddingEnd="15dp"
                          android:text="@string/search_params"
                          android:textColor="@color/grafitText"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintLeft_toLeftOf="parent"
                          app:layout_constraintTop_toTopOf="parent"/>

                <TextView style="@style/Caption1.Medium"
                          android:id="@+id/resetBtn"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingStart="15dp"
                          android:paddingEnd="15dp"
                          android:text="@string/reset"
                          android:textColor="@color/greenText"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintRight_toRightOf="parent"
                          app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"
                      android:paddingBottom="8dp"
                      android:text="@string/sorting"
                      android:textColor="@color/gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:clipToPadding="false"
                          android:orientation="horizontal"
                          android:paddingStart="15dp"
                          android:paddingTop="10dp"
                          android:paddingEnd="15dp"
                          android:paddingBottom="10dp">

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/sortNear"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/near"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/sortRating"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/rating"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/sortPrice"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/price"/>
            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"
                      android:text="@string/cost"
                      android:textColor="@color/gray"/>

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:layout_marginBottom="7.5dp">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                             app:layout_constraintBottom_toBottomOf="@id/filtersCostSeekBar">

                    <TextView style="@style/Body1.Medium"
                              android:id="@+id/costStart"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="12dp"
                              android:layout_marginEnd="0dp"
                              android:layout_marginBottom="20dp"
                              android:text="4"
                              android:textColor="@color/grayDarkMiddle"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView style="@style/Body1.Medium"
                              android:id="@+id/costEnd"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="0dp"
                              android:layout_marginEnd="12dp"
                              android:layout_marginBottom="20dp"
                              android:text="4"
                              android:textColor="@color/grayDarkMiddle"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintRight_toRightOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>

                <SeekBar android:id="@+id/filtersCostSeekBar"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:theme="@style/SeekBar"
                         app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"
                      android:paddingBottom="6dp"
                      android:text="@string/sex"
                      android:textColor="@color/gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:clipToPadding="false"
                          android:orientation="horizontal"
                          android:paddingStart="15dp"
                          android:paddingEnd="15dp"
                          android:paddingBottom="16dp">

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/sexAny"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/mixed"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/sexMan"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="5dp"
                          android:layout_marginEnd="5dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/man"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/sexWoman"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="10dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/woman"/>
            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"
                      android:paddingBottom="6dp"
                      android:text="@string/timetable"
                      android:textColor="@color/gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:clipToPadding="false"
                          android:orientation="horizontal"
                          android:paddingStart="12dp"
                          android:paddingEnd="15dp"
                          android:paddingBottom="16dp">

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDayMonday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_monday"
                          android:textAppearance="@style/Caption1"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDayTuesday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_tuesday"
                          android:textAppearance="@style/Caption1"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDayWednesday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="12dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_wednesday"
                          android:textAppearance="@style/Caption1"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDayThursday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_thursday"
                          android:textAppearance="@style/Caption1"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDayFriday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_friday"
                          android:textAppearance="@style/Caption1"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDaySaturday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_saturday"
                          android:textAppearance="@style/Caption1"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/filterDaySunday"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="15dp"
                          android:layout_marginEnd="0dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/short_sunday"
                          android:textAppearance="@style/Caption1"/>
            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"
                      android:text="@string/age"
                      android:textColor="@color/gray"/>

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:layout_marginBottom="7.5dp">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                             app:layout_constraintBottom_toBottomOf="@id/filtersAgeSeekBar">

                    <TextView style="@style/Body1.Medium"
                              android:id="@+id/ageStart"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="12dp"
                              android:layout_marginEnd="0dp"
                              android:layout_marginBottom="20dp"
                              android:text="5"
                              android:textColor="@color/grayDarkMiddle"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintLeft_toLeftOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>

                    <TextView style="@style/Body1.Medium"
                              android:id="@+id/ageEnd"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="0dp"
                              android:layout_marginEnd="12dp"
                              android:layout_marginBottom="20dp"
                              android:text="5"
                              android:textColor="@color/grayDarkMiddle"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintRight_toRightOf="parent"
                              app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>

                <SeekBar android:id="@+id/filtersAgeSeekBar"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:theme="@style/SeekBar"
                         app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="12dp"
                      android:paddingEnd="12dp"
                      android:paddingBottom="6dp"
                      android:text="@string/acceptance"
                      android:textColor="@color/gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:clipToPadding="false"
                          android:orientation="horizontal"
                          android:paddingStart="12dp"
                          android:paddingEnd="12dp"
                          android:paddingBottom="16dp">

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/applyAny"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="10dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/any"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/applyGo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="5dp"
                          android:layout_marginEnd="5dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/coming"/>

                <CheckBox style="@style/BottomFiltersCheckBoxWhite"
                          android:id="@+id/applyNotGo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="10dp"
                          android:layout_weight="1"
                          android:elevation="1dp"
                          android:text="@string/not_coming"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button android:id="@+id/filtersAcceptButton"
            style="@style/BottomButtonGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"/>
</LinearLayout>