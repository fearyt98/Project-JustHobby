<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:background="@color/colorPrimary"
                                                 android:paddingTop="15dp"
                                                 android:paddingBottom="15dp">

        <ImageButton android:id="@+id/onSettingsBtnBack"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@android:color/transparent"
                     android:contentDescription="@string/courses"
                     android:paddingStart="16dp"
                     android:tint="@color/whiteTop"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintLeft_toLeftOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:srcCompat="@drawable/ic_arrow_back_24dp"
                     tools:ignore="RtlSymmetry"/>

        <TextView style="@style/H2.Medium.UpperCase"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingStart="0dp"
                  android:paddingEnd="40dp"
                  android:text="@string/about_app"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toRightOf="@+id/onSettingsBtnBack"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="60dp"
                  android:layout_marginBottom="60dp"
                  android:orientation="vertical">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@drawable/ic_settings_logo"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/version_app"
                  android:textColor="@color/gray"/>
    </LinearLayout>

    <TextView android:id="@+id/confidentPoliticBtn"
              style="@style/Body1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="12dp"
              android:paddingTop="15dp"
              android:paddingEnd="12dp"
              android:paddingBottom="15dp"
              android:text="@string/confident_politic"
              android:textColor="@color/grafitText"
              android:visibility="gone"/>

    <TextView android:id="@+id/userAgreementBtn"
              style="@style/Body1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="12dp"
              android:paddingTop="15dp"
              android:paddingEnd="12dp"
              android:paddingBottom="15dp"
              android:text="@string/user_agreement"
              android:textColor="@color/grafitText"/>

    <TextView android:id="@+id/licensesBtn"
              style="@style/Body1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="12dp"
              android:paddingTop="15dp"
              android:paddingEnd="12dp"
              android:paddingBottom="15dp"
              android:text="@string/licenses"
              android:textColor="@color/grafitText"/>
</LinearLayout>