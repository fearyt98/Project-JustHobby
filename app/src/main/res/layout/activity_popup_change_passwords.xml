<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@drawable/popup_bg"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView style="@style/H2.Medium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="2dp"
              android:paddingEnd="0dp"
              android:paddingBottom="10dp"
              android:text="@string/change_pass"
              android:textColor="@color/grafitText"/>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <TextView android:id="@+id/oldPasswordError"
                  style="@style/ErrorMessage"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="привет"
                  android:visibility="gone"
                  android:textColor="@color/orangeText"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>

        <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintLeft_toLeftOf="parent"
                                                       app:layout_constraintRight_toRightOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText android:id="@+id/popupOldPass"
                                                             android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                             android:hint="@string/old_password"
                                                             android:textColorHint="@color/grafitText"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText android:id="@+id/popupNewPass"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:hint="@string/new_password"
                                                         android:textColorHint="@color/grafitText"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText android:id="@+id/popupRepeatPass"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:hint="@string/repeat_password"
                                                         android:textColorHint="@color/grafitText"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <TextView android:id="@+id/popupUserProfileCancel"
                  style="@style/Body1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:paddingStart="10dp"
                  android:paddingEnd="10dp"
                  android:text="@string/cancel"
                  android:textColor="@color/grayDarkMiddle"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintRight_toLeftOf="@id/popupUserProfileOk"
                  app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/popupUserProfileOk"
                  style="@style/Body1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:paddingStart="15dp"
                  android:paddingEnd="20dp"
                  android:text="@string/okay"
                  android:textColor="@color/colorPrimary"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>