<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".CompanyInfo.CompanyCoursesInfoActivity.CompanyCoursesFragment">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="64dp"
                 android:paddingBottom="8dp"
                 android:background="@drawable/appbar_bg"
                 android:orientation="horizontal">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_gravity="center_vertical"
                     android:id="@+id/companyCoursesBtnBack"
                     android:paddingStart="20dp"
                     android:tint="@color/whiteTop"
                     app:srcCompat="@drawable/ic_arrow_back_24dp"
                     android:background="@android:color/transparent"
                     tools:ignore="RtlSymmetry"
                     android:contentDescription="@string/back"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="@string/test_company_title"
                  android:textColor="@color/whiteTop"
                  style="@style/Body1.Medium"/>
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
                                            android:id="@+id/companyCoursesRecyclerView"
                                            android:layout_width="match_parent"
                                            android:overScrollMode="never"
                                            android:layout_height="match_parent"
                                            android:paddingBottom="9dp"
                                            android:paddingTop="3dp"
                                            android:clipToPadding="false"
                                            tools:listitem="@layout/fragment_card_course"/>
</LinearLayout>