<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".HomeMainActivity.HomeMainActivity">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:orientation="horizontal"
                                                 android:id="@+id/homeMainTopNavigation"
                                                 android:paddingTop="12dp"
                                                 android:paddingBottom="5dp"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintLeft_toLeftOf="parent"
                                                 app:layout_constraintRight_toRightOf="parent">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/icHomeMainCourses"
                     android:background="@drawable/ic_courses_home_main"
                     android:layout_marginLeft="10dp"
                     app:layout_constraintLeft_toLeftOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      app:layout_constraintRight_toLeftOf="@id/icHomeMainBookmark"
                      app:layout_constraintLeft_toRightOf="@id/icHomeMainCourses"
                      app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/icHomeMainCalendar"
                     android:background="@drawable/ic_calendar_today_home_main"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/icHomeMainCalendarText"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:text="9 марта, суббота"/>
        </LinearLayout>
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/ic_bookmark_home_main"
                     android:id="@+id/icHomeMainBookmark"
                     android:layout_marginRight="10dp"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.BottomNavigationView android:id="@+id/navigation"
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginEnd="0dp"
                                                        android:layout_marginStart="0dp"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        app:layout_constraintLeft_toLeftOf="parent"
                                                        app:layout_constraintRight_toRightOf="parent"
                                                        app:itemBackground="@color/colorPrimary"
                                                        app:itemIconTint="@color/whiteTop"
                                                        app:labelVisibilityMode="unlabeled"
                                                        app:menu="@menu/navigation"/>
</android.support.constraint.ConstraintLayout>