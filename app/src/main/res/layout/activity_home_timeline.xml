<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <android.support.constraint.ConstraintLayout android:orientation="horizontal"
                                                 android:id="@+id/homeMainGeneral"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:paddingTop="10dp"
                                                 android:paddingBottom="20dp">
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/homeCourses"
                     app:srcCompat="@drawable/ic_assignment_green_24dp"
                     android:paddingStart="16dp"
                     app:layout_constraintLeft_toLeftOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     android:background="@android:color/transparent"
                     android:contentDescription="@string/courses"
                     tools:ignore="RtlSymmetry"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      app:layout_constraintRight_toLeftOf="@id/homeBookmarks"
                      app:layout_constraintLeft_toRightOf="@id/homeCourses"
                      app:layout_constraintBottom_toBottomOf="parent">
            <ImageButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/homeCalendar"
                         app:srcCompat="@drawable/ic_today_green_24dp"
                         android:paddingEnd="8dp"
                         android:background="@android:color/transparent"
                         android:contentDescription="@string/courses"
                         tools:ignore="RtlSymmetry"/>
            <TextView style="@style/Body1.Medium"
                      android:id="@+id/homeCalendarText"
                      android:textColor="@color/grafitText"
                      android:text=""/>
        </LinearLayout>
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     app:srcCompat="@drawable/ic_bookmark_green_24dp"
                     android:id="@+id/homeBookmarks"
                     android:paddingEnd="16dp"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     android:background="@android:color/transparent"
                     android:contentDescription="@string/calendar"
                     tools:ignore="RtlSymmetry"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp">
        <LinearLayout android:layout_width="10dp"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:weightSum="1">
            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:layout_gravity="center_horizontal"
                  android:background="@drawable/card_timeline_circle"/>
            <View android:layout_width="2dp"
                  android:layout_height="0dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_weight="1.02"
                  android:background="@drawable/card_timeline_circle"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="15dp"
                      android:paddingTop="2dp"
                      android:paddingBottom="26dp"
                      android:layout_gravity="top">
            <TextView style="@style/Body2.Medium"
                      android:id="@+id/homeCurrentTime"
                      android:textColor="@color/grafitText"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="18.10"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/eventsRecyclerView"
                                            android:layout_width="match_parent"
                                            android:overScrollMode="never"
                                            android:layout_height="match_parent"/>
</LinearLayout>