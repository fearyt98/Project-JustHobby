<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View android:id="@+id/cardNotificationFirstLine"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/grayLightTopMiddle"
          android:visibility="invisible"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingStart="20dp"
                  android:paddingTop="8dp"
                  tools:ignore="RtlSymmetry">

        <TextView android:id="@+id/cardNotificationTitle"
                  style="@style/Body2.Medium"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Восточные танцы"
                  android:textColor="@color/greenText"
                  tools:ignore="HardcodedText"/>

        <TextView android:id="@+id/cardNotificationDescription"
                  style="@style/Caption1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Через 2 часа в 15:00 у Вас состоится занятие по адресу пр. Ленина, 147"
                  android:textColor="@color/grafitText"
                  tools:ignore="HardcodedText"/>

        <LinearLayout style="@style/Caption3"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingBottom="8dp">

            <TextView android:id="@+id/cardNotificationDay"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="26"
                      android:textColor="@color/gray"
                      tools:ignore="HardcodedText"/>

            <TextView android:id="@+id/cardNotificationMonth"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingStart="4dp"
                      android:text="февраля"
                      android:textColor="@color/gray"
                      tools:ignore="HardcodedText"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingStart="4dp"
                      android:paddingEnd="4dp"
                      android:text="в"
                      android:textColor="@color/gray"
                      tools:ignore="HardcodedText"/>

            <TextView android:id="@+id/cardNotificationTime"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="13:00"
                      android:textColor="@color/gray"
                      tools:ignore="HardcodedText"/>
        </LinearLayout>
    </LinearLayout>

    <View android:id="@+id/cardNotificationLastLine"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="8dp"
          android:background="@color/grayLightTopMiddle"/>
</LinearLayout>