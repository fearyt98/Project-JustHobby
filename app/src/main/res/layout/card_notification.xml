<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View android:id="@+id/cardNotificationFirstLine"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/grayLightTopMiddle"
          android:visibility="invisible"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingStart="20dp"
                  android:paddingTop="8dp"
                  tools:ignore="RtlSymmetry">

        <TextView android:id="@+id/cardNotificationTitle"
                  style="@style/Body2.Medium"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/greenText"/>

        <TextView android:id="@+id/cardNotificationDescription"
                  style="@style/Caption1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/grafitText"/>

        <LinearLayout style="@style/Caption3"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingBottom="8dp">

            <TextView android:id="@+id/cardNotificationDateTime"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>

    <View android:id="@+id/cardNotificationLastLine"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="8dp"
          android:background="@color/grayLightTopMiddle"/>
</LinearLayout>