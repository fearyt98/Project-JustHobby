<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:fillViewport="true">
    <RelativeLayout android:id="@+id/main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    tools:context=".RecoveryActivity.RecoveryActivity">
        <ImageView tools:ignore="ContentDescription"
                   android:id="@+id/mainLogo"
                   android:layout_centerHorizontal="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginTop="44dp"
                   android:layout_marginBottom="40dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/logo" />
        <RelativeLayout android:id="@+id/mainForm"
                        android:layout_below="@id/mainLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
            <RelativeLayout android:id="@+id/mainInput1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                <TextView android:id="@+id/mainLabelEmail"
                          style="@style/Label"
                          android:layout_alignStart="@id/mainLogin"
                          android:paddingStart="18.5dp"
                          android:text="@string/email"
                          tools:ignore="RtlSymmetry" />
                <EditText android:id="@+id/mainLogin"
                          style="@style/EditText"
                          android:autofillHints="email"
                          android:layout_below="@id/mainLabelEmail"
                          android:inputType="textEmailAddress" />
            </RelativeLayout>
            <RelativeLayout android:id="@+id/mainInput2"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/mainInput1"
                            android:layout_marginTop="0.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                <TextView android:id="@+id/mainLabelPassword"
                          style="@style/Label"
                          android:layout_alignStart="@id/mainInputAndBtn"
                          android:paddingStart="33.5dp"
                          android:text="@string/password"
                          tools:ignore="RtlSymmetry" />
                <RelativeLayout android:id="@+id/mainInputAndBtn"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/mainLabelPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                    <EditText android:id="@+id/mainPassword"
                              style="@style/EditText"
                              android:autofillHints="email"
                              android:inputType="textPassword"
                              tools:ignore="UnusedAttribute" />
                    <ImageButton android:id="@+id/mainPasswordVisible"
                                 android:layout_alignEnd="@id/mainPassword"
                                 android:layout_centerVertical="true"
                                 android:paddingBottom="5dp"
                                 android:paddingEnd="18.5dp"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:src="@drawable/ic_visibility_white_24dp"
                                 android:background="@android:color/transparent"
                                 tools:ignore="RtlSymmetry" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView style="@style/Caption1"
                      android:id="@+id/mainForget"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="0.5dp"
                      android:layout_marginBottom="5.5dp"
                      android:paddingEnd="2.5dp"
                      android:layout_below="@id/mainInput2"
                      android:layout_alignEnd="@id/mainEnterButton"
                      android:textColor="@color/whiteTopUnder"
                      android:text="@string/forget"
                      tools:ignore="RtlSymmetry" />
            <Button android:id="@+id/mainEnterButton"
                    android:layout_centerHorizontal="true"
                    style="@style/ButtonWhite"
                    android:layout_below="@id/mainForget"
                    android:text="@string/sign_in" />
        </RelativeLayout>
        <TextView android:id="@+id/mainOr"
                  android:layout_below="@+id/mainForm"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="@style/Caption1.Medium"
                  android:text="@string/or"
                  android:textColor="@color/whiteMidOfMiddle"
                  android:textAlignment="center"
                  android:layout_marginTop="20dp"
                  android:layout_marginBottom="20dp" />
        <GridLayout android:id="@+id/mainSocial"
                    android:layout_below="@+id/mainOr"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:rowCount="1"
                    android:columnCount="3">
            <Button android:id="@+id/mainVkEnter"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/btn_circle_start_vk_def"
                    android:layout_marginEnd="16dp" />
            <Button android:id="@+id/mainGoogleEnter"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/btn_circle_start_google_def" />
            <Button android:id="@+id/mainFacebookEnter"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/btn_circle_start_fb_def"
                    android:layout_marginStart="16dp" />
        </GridLayout>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_below="@+id/mainSocial"
                      android:layout_marginTop="24dp"
                      android:orientation="vertical"
                      android:gravity="center_horizontal|bottom">
            <TextView android:id="@+id/mainRegistry"
                      style="@style/BtnBottomFirstScreens"
                      android:text="@string/sign_up"
                      android:shadowColor="#66000000"
                      android:shadowRadius="4"
                      android:shadowDy="2" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>