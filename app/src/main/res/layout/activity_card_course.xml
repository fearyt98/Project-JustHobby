<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_height="110dp"
                                             android:layout_width="match_parent"
                                             android:background="@drawable/card_course_bg">
    <LinearLayout android:layout_width="45dp"
                  android:layout_height="match_parent"
                  android:id="@+id/ratingPopularCourse"
                  android:orientation="vertical"
                  android:background="@drawable/card_rating_five"
                  app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center_vertical">
            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       app:srcCompat="@drawable/ic_star_24dp"
                       android:layout_gravity="center"/>
            <TextView android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textColor="@color/whiteText"
                      android:text="5"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:paddingTop="5dp"
                  android:orientation="vertical"
                  android:id="@+id/infoPopularCourse"
                  android:paddingLeft="10dp"
                  app:layout_constraintLeft_toRightOf="@id/ratingPopularCourse">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:id="@+id/titlePopularCourse"
                  android:text="Восточные танцы"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:id="@+id/descriptionPopularCourse"
                  android:text="Drive - Школа танцев в Томске"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="20dp"
                      android:id="@+id/addressPopularCourse"
                      android:paddingRight="5dp"
                      android:text="пр. Ленина, 147"/>
            <ImageView android:layout_width="5dp"
                       android:layout_height="5dp"
                       android:layout_gravity="center_vertical"
                       android:tint="@color/gray"
                       app:srcCompat="@drawable/ic_circle_separator"
                       android:background="@android:color/transparent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="20dp"
                      android:id="@+id/metresPopularCourse"
                      android:paddingLeft="5dp"
                      android:text="750 м"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="2dp"
                   app:srcCompat="@drawable/ic_horizontal_separator"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="20dp"
                      android:orientation="horizontal">
            <ImageView android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:layout_marginRight="5dp"
                       android:layout_gravity="center_vertical"
                       android:tint="@color/gray"
                       app:srcCompat="@drawable/ic_success"
                       android:background="@android:color/transparent"/>
            <ImageView android:layout_width="5dp"
                       android:layout_height="5dp"
                       android:layout_gravity="center_vertical"
                       android:tint="@color/gray"
                       app:srcCompat="@drawable/ic_circle_separator"
                       android:background="@android:color/transparent"/>
            <ImageView android:layout_width="10dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:layout_gravity="center_vertical"
                       android:tint="@color/gray"
                       app:srcCompat="@drawable/ic_female"
                       android:background="@android:color/transparent"/>
            <ImageView android:layout_width="5dp"
                       android:layout_height="5dp"
                       android:layout_gravity="center_vertical"
                       android:tint="@color/gray"
                       app:srcCompat="@drawable/ic_circle_separator"
                       android:background="@android:color/transparent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      android:text="20"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="-"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      android:text="80"/>
            <ImageView android:layout_width="5dp"
                       android:layout_height="5dp"
                       android:layout_gravity="center_vertical"
                       android:tint="@color/gray"
                       app:srcCompat="@drawable/ic_circle_separator"
                       android:background="@android:color/transparent"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="20dp"
                      android:paddingLeft="5dp"
                      android:text="500Р / занятие"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:tint="@color/gray"
               app:srcCompat="@drawable/ic_separator"
               android:background="@android:color/transparent"
               app:layout_constraintRight_toLeftOf="@id/btnsPopularCourse"/>
    <LinearLayout android:layout_width="45dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/btnsPopularCourse"
                  app:layout_constraintRight_toRightOf="parent">
        <ImageButton android:layout_width="35dp"
                     android:layout_height="35dp"
                     android:layout_weight="0.5"
                     android:layout_gravity="center"
                     app:srcCompat="@drawable/ic_bookmark_24dp"
                     android:tint="@color/gray"
                     android:background="@android:color/transparent"/>
        <ImageButton android:layout_width="35dp"
                     android:layout_height="35dp"
                     android:layout_weight="0.5"
                     android:layout_gravity="center"
                     app:srcCompat="@drawable/ic_place_24dp"
                     android:tint="@color/gray"
                     android:background="@android:color/transparent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>