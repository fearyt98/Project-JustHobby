<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <!-- Edit text | bottom -7.5 | left -2.5 | right -2.5 | top -2.5 -->
    <style name="EditText">
        <item name="android:textColor">@drawable/edittext_start_color</item>
        <item name="android:textColorHint">@color/whiteTopUnder</item>
        <item name="android:textAppearance">@style/Body2.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15.5dp
        </item><!-- 13 (padding in edittext) + 2.5 (full padding in background) -->
        <item name="android:paddingBottom">20.5dp</item><!-- 13 + 7.5 -->
        <item name="android:paddingStart">31dp</item><!-- 16 + 15 -->
        <item name="android:paddingEnd">31dp</item><!-- 16 + 15 -->
        <item name="android:background">@drawable/edittext_start_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLength">255</item>
        <item name="android:imeOptions">actionGo</item>
    </style>
    <!-- Edit text search | bottom -7.5 | left -2.5 | right -2.5 | top -2.5 -->
    <style name="EditTextSearch">
        <item name="android:textColor">@drawable/edittext_start_color</item>
        <item name="android:textColorHint">@color/whiteTopUnder</item>
        <item name="android:textAppearance">@style/Body1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">25dp
        </item><!-- 12 (padding in edittext) + 15 (full padding in background) -->
        <item name="android:paddingBottom">20dp</item><!-- 12 + 8 -->
        <item name="android:paddingStart">31dp</item><!-- 16 + 15 -->
        <item name="android:paddingEnd">31dp</item><!-- 16 + 15 -->
        <item name="android:background">@drawable/edittext_search_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLength">180</item>
        <item name="android:imeOptions">actionGo</item>
    </style>
    <!-- Button white | bottom -7.5 | left -2.5 | right -2.5 | top -2.5 -->
    <style name="ButtonWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/Body1.Bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14.5dp</item><!-- 12 (padding in btn) + 2.5 (full padding in background) -->
        <item name="android:paddingBottom">19.5dp</item><!-- 12 + 7.5 -->
        <item name="android:paddingStart">31dp</item><!-- 16 + 15 -->
        <item name="android:paddingEnd">31dp</item><!-- 16 + 15 -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_start_bg</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- Button green | bottom -7.5 | left -2.5 | right -2.5 | top -2.5 -->
    <style name="ButtonGreen">
        <item name="android:textColor">@color/whiteTop</item>
        <item name="android:textAppearance">@style/Body1.Bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14.5dp</item><!-- 12 (padding in btn) + 2.5 (full padding in background) -->
        <item name="android:paddingBottom">19.5dp</item><!-- 12 + 7.5 -->
        <item name="android:paddingStart">31dp</item><!-- 16 + 15 -->
        <item name="android:paddingEnd">31dp</item><!-- 16 + 15 -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_green_bg</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BottomButtonGreen">
        <item name="android:textColor">@color/whiteTop</item>
        <item name="android:textAppearance">@style/Body1.Bold.UpperCase</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- Button Filters -->
    <style name="BottomFiltersCheckBoxWhite">
        <item name="android:textColor">@drawable/btn_filter_color</item>
        <item name="android:textAppearance">@style/Body2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_filter_bg</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ErrorMessage">
        <item name="android:textColor">@color/errorMessage</item>
        <item name="android:textAppearance">@style/Caption1.Medium</item>
    </style>
    <!-- Tab -->
    <style name="TabsPageViewer" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">52dp</item>
        <item name="tabIndicatorColor">@color/whiteTop</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/whiteTop</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/whiteTop</item>
        <item name="tabPaddingBottom">9dp</item>
    </style>
    <!-- Tab text -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.7</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/whiteMiddle</item>
    </style>
    <!-- Bottom Sheets -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheets_subcat_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>
    <!-- Days and Time in group card and user courses -->
    <style name="dayWeekNow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:background">@drawable/card_group_day_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0.5dp</item>
        <item name="android:paddingBottom">0.5dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="timeDayWeekNow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dayWeekDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grafitText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0.5dp</item>
        <item name="android:paddingBottom">0.5dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="timeDayWeekDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:textColor">@color/greenDarkText</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Rating Bar -->
    <style name="RatingBar">
        <item name="colorControlNormal">@color/orangeText</item>
        <item name="colorControlActivated">@color/orangeText</item>
    </style>

    <style name="RatingBarCourseReview">
        <item name="colorControlNormal">@color/grafit</item>
        <item name="colorControlActivated">@color/grafit</item>
    </style>
    <!-- CheckBox -->
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grayDarkMiddle</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <!-- Label -->
    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">@style/Caption1</item>
        <item name="android:textColor">@color/whiteTopUnder</item>
        <item name="android:paddingStart">31dp</item>
    </style>
    <!-- Btn bottom first screens -->
    <style name="BtnBottomFirstScreens">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.7</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!-- Heading 2 -->
    <style name="H2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="H2.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="H2.Medium.UpperCase">
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- Body 1 -->
    <style name="Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body1.Bold.UpperCase">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Body1.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body1.Medium.UpperCase">
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- Body 2 -->
    <style name="Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="Body2.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body2.Medium.UpperCase">
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- Caption 1 -->
    <style name="Caption1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingMultiplier">1.16</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="Caption1.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Caption1.Medium.UpperCase">
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- Caption 2 -->
    <style name="Caption2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0.5dp</item>
        <item name="android:paddingBottom">0.5dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="Caption2.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Caption2.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Caption 3 -->
    <style name="Caption3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="Caption3.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
