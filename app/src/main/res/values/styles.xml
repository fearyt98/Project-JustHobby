<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@drawable/change_color_focus</item>
        <item name="android:textColorHint">@color/whiteTopUnder</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:background">@drawable/change_back_edittext</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textViewBaseScreenProperty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <!-- Heading 6 -->
    <style name="H6">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- Body 1 -->
    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Body1.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!-- Body 2 -->
    <style name="Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- Caption 1 -->
    <style name="Caption1">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
